<div class="container text-center my-5">
  <h1 class="mb-4">Your Chats</h1>
  <p class="mb-0">Can't remember which CV you were working on? Quickly check all your chats to find what you need!</p>
  <div id="chats-container" class="row my-3 justify-content-center">
    <div class="col-8">
      <% @chats.each do |chat| %>
        <%= link_to chat_path(chat) do %>
          <div class="mb-2 p-3 bg-primary bg-opacity-10 border border-primary rounded d-flex justify-content-between align-items-end">
            <h4 class="mb-0"><%= chat.title %></h4>
            <p class="mb-0"><%= link_to chat.cv.title, cv_path(chat.cv), class: "btn"%></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
