<div class="container text-center my-5">
  <h1 class="mb-4">Time to sensei your CV</h1>
  <%= link_to "+ Add a new CV", new_cv_path, class: "btn btn-primary mb-4"%>

    <div class="row justify-content-center cv-container">
      <% current_user.cvs.each do |cv| %>
        <div class="cvcard m-2">
          <%= link_to cv_path(cv) do %>
            <p><%= cv.title %></p>
          <% end %>
            <div class="cvcardbin">
              <%= link_to cv_path(cv), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this CV?" }, class: "btn btn-primary" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
